<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:background="@android:color/black"
    android:gravity="fill"
    android:orientation="vertical"
    android:padding="3dp" >

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:stretchColumns="0,1"
        android:paddingBottom="3dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:text="@string/location" />

            <TextView
                android:id="@+id/positionLatLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:text="@string/serving_lte_cell_id" />

            <TextView
                android:id="@+id/cellid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textColor="@android:color/primary_text_dark"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"  android:textColor="@android:color/primary_text_dark"
                android:text="@string/lte_signal_strength" />

            <TextView
                android:id="@+id/sigstrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:textAlignment="textEnd" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/bsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:text="@string/cdma_1xrtt_base_station" />

            <TextView
                android:id="@+id/cdma_sysinfo"
                android:layout_width="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/sigStrengthLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:text="@string/_1xrtt_signal_strength" />

            <TextView
                android:id="@+id/cdmaSigStrength"
                android:layout_width="wrap_content" android:textColor="@android:color/primary_text_dark"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <WebView
        android:id="@+id/leafletView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TableLayout1" />

</RelativeLayout>