<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:background="@android:color/black"
    android:gravity="fill"
    android:orientation="horizontal"
    android:padding="3dp"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".4"
        android:paddingRight="3dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/positionLatLon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/serving_lte_cell_id"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/cellid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lte_signal_strength"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/sigstrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/bsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cdma_1xrtt_base_station"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/cdma_sysinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark" />

        <TextView
            android:id="@+id/sigStrengthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_1xrtt_signal_strength"
            android:textColor="@android:color/holo_blue_dark" />

        <TextView
            android:id="@+id/cdmaSigStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="@android:color/primary_text_dark" />
    </LinearLayout>

    <WebView
        android:id="@+id/leafletView"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".6" />

</LinearLayout>